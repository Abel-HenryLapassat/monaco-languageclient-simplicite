{
  "private": true,
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "scripts": {
    "verify": "npm install && npm run dev",
    "verify:ci": "npm install && npm run build -d",
    "dev": "npm run build:worker && next dev -p 8083",
    "dev:turbo": "npm run build:worker &&next dev --turbopack -p 8083",
    "build": "npm run build:worker &&next build",
    "build:worker": "npx esbuild --format=esm --bundle ./app/langium-dsl/worker/langium-server.ts --outdir=public/workers",
    "build:worker:vite": "vite build",
    "start": "next start",
    "clean": "shx rm -fr dist .next *.tsbuildinfo"
  },
  "type": "module",
  "dependencies": {
    "@codingame/monaco-vscode-api": "^21.0.1",
    "@codingame/monaco-vscode-keybindings-service-override": "^21.0.1",
    "@typefox/monaco-editor-react": "~7.0.0-next.2",
    "langium": "~4.0.0",
    "monaco-languageclient": "~10.0.0-next.2",
    "monaco-languageclient-examples": "~2025.8.6",
    "next": "~15.5.2",
    "react": "~19.1.1",
    "react-dom": "~19.1.1",
    "vscode": "npm:@codingame/monaco-vscode-extension-api@^21.0.1",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@types/node": "~22.15.35",
    "@types/react": "~19.1.12",
    "@types/react-dom": "~19.1.9",
    "shx": "~0.4.0",
    "typescript": "~5.9.2",
    "rolldown-vite": "~7.1.5"
  },
  "volta": {
    "node": "22.19.0",
    "npm": "10.9.3"
  }
}
